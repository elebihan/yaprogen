# Set the list of dependencies
set(!!executable_lower!!_SRCS
    main.c)

# Tell CMake to build an executable using the previously set dependencies
add_executable(!!executable_name!! ${!!executable_lower!!_SRCS})

# Tell CMake to add some librairies to the linker path (i.e. the ones
# we found performing some checks in the top-level CMakeLists.txt)
target_link_libraries(!!executable_name!! ${LIBS})

# Where should we install the program?
install(TARGETS !!executable_name!! DESTINATION bin)

