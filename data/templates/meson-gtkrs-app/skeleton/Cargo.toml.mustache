[package]
name = "{{executable_name}}"
version = "0.1.1"
authors = ["{{author_name}} <{{author_email}}>"]
license = "{{license_alias}}"
homepage = "{{homepage}}"
description = """
{{description}}
"""
edition = "2021"

[profile.release]
lto = true

[dependencies]
adw = { package = "libadwaita", version = "0.5", features = ["v1_4"] }
gettext-rs = { version = "0.7", features = ["gettext-system"] }
gio = { version = "0.18" }
gtk = { version = "0.7", package = "gtk4", features = ["v4_12", "blueprint"] }
once_cell = "1.18.0"
tracing = "0.1"
tracing-subscriber = "0.3"
